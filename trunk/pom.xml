<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>7</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>

	<groupId>net.sf.jcommon</groupId>
	<artifactId>jcommon</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>
	<name>jcommon</name>
	<description>jcommon</description>
	<url>http://jcommon.sf.net</url>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<developers>
		<developer>
			<id>beradrian</id>
			<name>Adrian Ber</name>
			<url>http://beradrian.wordpress.com</url>
			<organization>Adrian</organization>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>+2</timezone>
		</developer>
	</developers>
	<scm>
		<connection>scm:svn:https://jcommon.svn.sourceforge.net/svnroot/jcommon/trunk</connection>
		<developerConnection>scm:svn:https://jcommon.svn.sourceforge.net/svnroot/jcommon/trunk</developerConnection>
		<url>http://jcommon.svn.sourceforge.net/viewvc/jcommon/trunk</url>
	</scm>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<compilerVersion>1.6</compilerVersion>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>r09</version>
		</dependency>
		<dependency>
			<groupId>sun</groupId>
			<artifactId>applet-jsobject</artifactId>
			<version>1.6</version>
			<optional>true</optional>
			<!--scope>provided</scope -->
			<scope>system</scope>
			<systemPath>${java.home}/lib/plugin.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.jhlabs</groupId>
			<artifactId>awt</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/runtime/jhlabs.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

</project>
